<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.example.vlad81.kozlovskifirstapplication.launcher.SquareView
        android:id="@+id/launcher_image"
        android:layout_width="56dp"
        android:layout_height="56dp"

        android:background="@drawable/circle_item"
        android:layout_marginStart="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_didn_t_change_text"
        android:textSize="16sp"
        android:id="@+id/griditem_text"
        android:lines="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/grid_linear_description"
        android:text="@string/this_is_description_text"
        />

    </LinearLayout>
</LinearLayout>